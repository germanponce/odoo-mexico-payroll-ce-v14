            <notebook position="inside">
                <page string="Extra Info" name="extra_info" groups="base.group_no_one">
                    <group colspan="4">
                        <separator string="Informacion de Timbrado" colspan="2"/>
                        <field name="cfdi_sello"/>
                        <field name="cfdi_no_certificado"/>
