                                        <field name="rate"  optional="hide"/>
                                        <field name="no_suma" optional="show"/>
                                        <field name="monto_gravado"  optional="show" sum="suma_gravable"/>
                                        <field name="monto_exento"  optional="show" sum="suma_exento"/>
